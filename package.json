{
  "name": "spotify-controls",
  "version": "2.0.4",
  "description": "Hotkeys, notifications and playback controls for Spotify Web App",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-watch-sp": "webpack --env=spotify -w",
    "build-watch-am": "webpack --env=amazon -w",
    "zip-sp": "bestzip uploads/SpotifyControls.latest.zip dist/spotify",
    "zip-am": "bestzip uploads/AmazonMusicControls.latest.zip dist/amazon",
    "pack-sp": "webpack --env=spotify && npm run zip-sp",
    "pack-am": "webpack --env=amazon && npm run zip-am",
    "pack": "npm run pack-sp && npm run pack-am",
    "release": "ts-node release.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sergej-Popov/SpotifyControls.git"
  },
  "author": "Sergej Popov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sergej-Popov/SpotifyControls/issues"
  },
  "homepage": "https://github.com/Sergej-Popov/SpotifyControls#readme",
  "devDependencies": {
    "@octokit/rest": "^16.15.0",
    "@types/chrome": "0.0.47",
    "@types/fs-extra": "^5.0.4",
    "@types/node": "^10.12.24",
    "awesome-typescript-loader": "^3.2.1",
    "bestzip": "^1.1.4",
    "copy-webpack-plugin": "^4.0.1",
    "extended-define-webpack-plugin": "^0.1.3",
    "fs-extra": "^7.0.1",
    "source-map-loader": "^0.2.1",
    "ts-node": "^8.0.2",
    "typescript": "^2.4.2",
    "webpack": "^3.3.0"
  },
  "dependencies": {
    "prompt-async": "^0.9.9"
  }
}
